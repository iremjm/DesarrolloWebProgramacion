package Canciones.programa;
import java.util.Scanner;

import Canciones.cancion.Canciones;

public class Programa {

	public static void main(String[] args) {
		Scanner teclado= new Scanner(System.in);
		//definimos las variables
		 String nomTitu;
		 String nomAutor;
		 String tipoEstilo;
		 double tiempo;
		 boolean oida;
		//pedir nombre del alumno
		System.out.println("ingrese le título de la canción");
		nomTitu = teclado.nextLine();
		//Crear una canción
		Canciones cancion1=new Canciones(nomTitu);
		//mientras no deje el nombre vacio,  pedir 		
		while((!nomTitu.equals(""))){
			
			//Añado titulo a  canción1
			cancion1.setTitulo(nomTitu);
			
			//pedir autor
			System.out.println("Ingrese el autor");
			//dar autor
			nomAutor=teclado.nextLine();
			cancion1.setAutor(nomAutor);
		
			//pedir tipo de canción
			System.out.println("Ingrese tipo de canción");
			//dar tipo de canción
			tipoEstilo=teclado.nextLine();
			cancion1.setAutor(tipoEstilo);
			//pedir tiempo
			System.out.println("Ingrese duración");
			//dar tiempo
			tiempo=teclado.nextDouble();
			cancion1.setDuracion(tiempo);
			//pedir si se ha oído
			System.out.println("Se ha oído la canción \"true-false\" ");
			oida=teclado.nextBoolean();
		    cancion1.setEscuchada(oida);		
			
		}//while
			
		System.out.println("El titulo de la canción es   " + cancion1.getTitulo() + " y el autor " + cancion1.getAutor());
		

		System.out.println("Ha salido del sistema");
		
		System.out.println(cancion1);
	

	}

}
