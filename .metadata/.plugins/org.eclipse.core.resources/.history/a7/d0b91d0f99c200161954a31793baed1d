package EstrucuturasRepetitivas.For.While;

import java.util.Scanner;

public class DaUnoSal {

	public static void main(String[] args) {
		int num = 0;
		Scanner tc=new Scanner (System.in);
		System.out.println("Ïntroduce un número");
		num=tc.nextInt();
		while(num!=1){
			if(num%2==0){
				num/=2;
				
			}else if(num%3==0){
				num=(num*3)+1;
			}else if(num==1){
				break;
			}
			
		}
		
		

	}

}
