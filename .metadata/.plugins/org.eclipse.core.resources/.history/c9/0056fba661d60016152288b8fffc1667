package MetodosDiciembre.Ejer5;

import java.util.Scanner;

public class DiaTemp {
	Scanner tc;
	private String dia[]={"lunes","martes","miercoles","jueves","viernes","sabado","domingo"};
	private double minT[];
	private double maxT[];
	
	//Método constructor
	public DiaTemp(){
		tc=new Scanner(System.in);
	}
	
	//funciones
	//pedir temperaturas 
	public void pideTemps(){
		for(int i=0;i<=6;i++){
			System.out.println("Ingrese la temperatura Mínima del "+i);
			minT[i]=tc.nextInt();
				
		}
	}
}

