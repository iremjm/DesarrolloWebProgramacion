import processing.core.PApplet;

public class Processing1 extends PApplet{
	private int rad = 60;        //Ancho de la forma 
	private float xpos, ypos;    // Posición de la forma a partir    
	private float xvelocidad = 2.8f;  // Velocidad de la forma 
	private float yvelocidad =2.2f;  // Velocidad de la forma 
	private int xdireccion = 1;  // Izquierda o derecha 
	private int ydireccion = 1;  // De arriba a abajo 

	public static void main(String[] args) {
			PApplet.main("Processing1");
		
	}
	  public void settings(){
	        size(400,400);//tamaño del lienzo
	    }

	    public void setup(){//inicia
	        fill(1,50,240);//color bola
	        noStroke();
	        frameRate(30);
	        ellipseMode(RADIUS);
	        // Establecer la posición inicial de la forma 
	        xpos = width/2;
	        ypos = height/2;
	        
	    }//setup

	    public void draw(){
  
	        background(255);//fondo lienzo
	
	        xpos = xpos + ( xvelocidad * xdireccion );
	        ypos = ypos + ( yvelocidad * ydireccion );
	        
	        // Prueba para ver si la forma supera los límites de la pantalla 
	        // Si no lo hace, invertir su dirección de multiplicar por -1
	        if (xpos > width-rad || xpos < rad) {
	          xdireccion *= -1;
	        }
	        if (ypos > height-rad || ypos < rad) {
	          ydireccion *= -1;
	          ellipse(xpos, ypos, rad, rad);
	        }
	        //dibujar la bola
	        
	    }//draw
	    
}
