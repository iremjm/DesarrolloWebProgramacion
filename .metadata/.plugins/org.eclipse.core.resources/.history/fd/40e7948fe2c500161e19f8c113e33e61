import java.util.Scanner;

/*Realizar un programa que pregunte al usuario el momento del día con una letra
(m-mañana, t-tarde, n-noche), el sexo con otra letra (m-masculino, f-femenino). El
programa dirá: buenos días, tardes, o noches (según el momento) señor o señora
según el sexo.*/
public class Ejerc5 {

	public static void main(String[] args) {
		String momDia;
		String sexo;
		Scanner tc=new Scanner(System.in);
		System.out.println("¿En que momento del día se encuentra?\n ->mañana \n ->tarde \n ->noche");
		momDia=tc.nextLine();
		System.out.println("¿Su sexo es \n ->masculino \n ->femenino");
		sexo=tc.nextLine();
		if(momDia.toLowerCase().equals("mañana")){
			momDia="día";
	    }
		if(sexo.equals("femenino")){
			System.out.print("Buenas " + momDia.toLowerCase()+"s"+ " señora.");
		}else{
			System.out.print("Buenas " + momDia.toLowerCase()+"s" + " señor.");
		 } 
	}

}
